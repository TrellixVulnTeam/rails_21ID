<div align="center" class="my-4">
  <div class="card border-primary mb-3" style="max-width: 25rem;" align="center">
    <div class="card-header text-light bg-primary">ログイン</div>
    <%= form_for :login, html: { id: :form_id}, url: "/users/#{session[:hotel_id]}/login" do |f| %>
      <div class="card-body text-dark">
        <div class="form-group row">
          <%= f.label :mail, class:'col-sm-4' %>
          <div class="col-sm-2">
            <%= f.email_field :mail, class:'form-control require logoinform', required: true %>
            <div class="invalid-feedback logoinform">
              メールアドレスが無効です。
            </div>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class:'col-sm-4' %>
          <div class="col-sm-2">
            <%= f.password_field :password, class:'form-control require logoinform', required: true %>
            <div class="invalid-feedback logoinform">
              パスワードが無効です。
            </div>
          </div>
        </div>
        <p>アカウントをお持ちでない方は</p>
        <p><%= link_to 'sign in', '/users/signin', { :class => "text-success"} %></p>
      </div>
      <div class="card-footer border-primary  bg-light">
        <button type="button" class="btn btn-outline-primary btn-lg" onClick="location.href='/users/search'">戻る</button>
        <%= f.submit "ログイン", class: "btn btn-outline-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
