<div align="center" class="my-4">
  <div class="card text-white bg-primary mb-3" style="max-width: 30rem;" align="center">
    <div class="card-header">signin</div>
    <div class="card-body">
      <%= form_for @guest, url: "/users/create", method: :post do |f| %>
        <div class="form-group row">
          <%= f.label :name, class:'col-sm-4'%>
          <div class="col-sm-2">
            <%= f.text_field :name, class:'form_control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :mail, class:'col-sm-4' %>
          <div class="col-sm-2">
            <%= f.email_field :mail, class:'form_control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class:'col-sm-4' %>
          <div class="col-sm-2">
            <%= f.password_field :password, class:'form_control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password_confirmation, "Confirmation", class:'col-sm-4' %>
          <div class="col-sm-2">
            <%= f.password_field :password_confirmation, class:'form_control' %>
          </div>
        </div>
        <button type="button" class="btn btn-outline-light btn-lg" onClick="location.href='/users'">戻る</button>
        <%= f.submit "登録", class: "btn btn-outline-light btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
